module.exports = (sequelize, DataType) => {
  const Product = sequelize.define('Product', {
    id: {
      type: DataType.INTEGER,
      primaryKey: true,
      autoIncrement: true
    },
    name: DataType.STRING(45),
    image: DataType.STRING(100),
    cor: DataType.STRING(45),
    tamanho: DataType.DECIMAL(10),
    price: DataType.DECIMAL(10),
    discount: DataType.DECIMAL(10),
    productscol: DataType.STRING(45),
    order_idorder: DataType.INTEGER
  }, {
    timestamps: false,
    tableName: 'products'
  })
â€‹
  return Product
}