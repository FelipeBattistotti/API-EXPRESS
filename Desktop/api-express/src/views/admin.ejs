<!DOCTYPE html>
<html lang="en">
    <%- include('includes/head', { linkCss: 'css/admin.css' , title: 'admin' }) %>
<body>
    
<!-- A função include importa um trecho de código de outro arquivo
include(caminho do arquivo que eu quero importar o bloco de código)  -->
    <%- include('includes/header') %>
    <% if (typeof errors !== 'undefined') { %>
        <% for(let error in errors) { %>
            <script>
                toastr.options.progressBar = true;
                toastr.options.closeButton = true;
                toastr.error('<%= errors[error].msg %>')
            </script>
          <% } %>
      <% } %>
    
    <form action="/product" method="post">  

        <div class="product"> 
            <div>
                <label  for="text">Nome</label>  
                <input type="text" name="nameProduct">
            </div>

            <div>
                <label  for="text">Valor</label>  
                <input type="text" name="valueProduct">
            </div>

            <div>
                <label  for="text">Tamanho</label>  
                <input type="text" name="sizeProduct">
            </div>

            <div>
                <label  for="text">Descrição</label>  
                <input type="text" name="descriptionProduct">
            </div>

            <div>
                <label  for="text">Cor </label>  
                <input type="text" name="colorProduct">
            </div>
            <div>
                <label  for="text">Imagem </label>  
                <input type="text" name="pictureProduct">
            </div>

            <button type="submit">Enviar</button>

            <!-- <div>
                <label  for="text">Imagem</label>  
                <input type="text" name="imagemProduto" required>
            </div> -->
        </div>

    </form>

    <div class="container">
        <% if (typeof products !== 'undefined') { %>
            <% products.forEach(item => { %>
                <div class="produto">
                    
                    <p> quantidade </p>
                    <p> <%= item.name %> </p>
                    <p><%= item.value %> </p>
                    <p><%= item.size %> </p>
                    <p><%= item.color %> </p>
                    <p><%= item.description %> </p>
                    <p><%=  %> </p>
    
                </div>
           <%})%>
    
           <% } %>
        </div>
     
    
    <%- include('includes/footer') %>
  
</body>
</html>